{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    
     /* Ajouter ou vérifier ces deux options */
    "esModuleInterop": true,                /* Permet l'importation par défaut (default import) */
    "allowSyntheticDefaultImports": true,   /* Permet au compilateur de créer des "faux" default imports lorsque ce n'est pas le cas */


    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "src", 
    "paths": {
      "@/*": ["*"]
    }
  },
  
  "include": ["src", "src/**/*", ".eslintrc.cjs"],
  "references": [{ "path": "./tsconfig.node.json" }],

}
